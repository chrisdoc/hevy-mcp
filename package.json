{
	"name": "hevy-mcp",
	"version": "1.19.11",
	"main": "dist/index.mjs",
	"module": "src/index.ts",
	"types": "dist/index.d.mts",
	"files": [
		"dist",
		"README.md"
	],
	"access": "public",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chrisdoc/hevy-mcp.git"
	},
	"bugs": {
		"url": "https://github.com/chrisdoc/hevy-mcp/issues"
	},
	"homepage": "https://github.com/chrisdoc/hevy-mcp#readme",
	"bin": {
		"hevy-mcp": "dist/cli.mjs"
	},
	"scripts": {
		"inspect": "pnpm run build && pnpm dlx @modelcontextprotocol/inspector@latest node --env-file .env dist/index.mjs",
		"inspect:npm": "pnpm dlx @modelcontextprotocol/inspector@latest pnpm dlx hevy-mcp@latest",
		"test": "node --env-file .env node_modules/vitest/vitest.mjs --run",
		"openapi": "node ./scripts/openapi-spec.js",
		"build": "tsdown",
		"build:client": "kubb generate",
		"validate:openapi": "lint-openapi -c .ibm-openapi-validator.yaml openapi-spec.json",
		"start": "node --env-file .env dist/cli.mjs",
		"dev": "tsx watch --env-file .env --clear-screen=false src/cli.ts",
		"smithery:build": "smithery build",
		"smithery:dev": "smithery dev",
		"check": "biome check --write --unsafe",
		"check:types": "tsc --noEmit",
		"version:patch": "pnpm version patch",
		"version:minor": "pnpm version minor",
		"version:major": "pnpm version major",
		"release": "semantic-release",
		"commit": "commit"
	},
	"type": "module",
	"keywords": [
		"mcp",
		"hevy",
		"fitness",
		"api",
		"model context protocol"
	],
	"author": "Christoph Kieslich",
	"license": "MIT",
	"description": "A Model Context Protocol (MCP) server implementation that interfaces with the Hevy fitness tracking app and its API.",
	"dependencies": {
		"@kubb/cli": "^4.20.0",
		"@kubb/core": "^4.20.0",
		"@kubb/plugin-client": "^4.20.0",
		"@kubb/plugin-faker": "^4.20.0",
		"@kubb/plugin-oas": "^4.20.0",
		"@kubb/plugin-ts": "^4.20.0",
		"@kubb/plugin-zod": "^4.20.0",
		"@modelcontextprotocol/sdk": "^1.25.3",
		"@sentry/node": "^10.38.0",
		"@smithery/sdk": "4.0.1",
		"axios": "^1.13.4",
		"chalk": "^5.6.2",
		"cors": "^2.8.6",
		"express": "5.2.1",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.12",
		"@commitlint/cli": "^20.4.0",
		"@commitlint/config-conventional": "^20.4.0",
		"@commitlint/prompt-cli": "^20.4.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/npm": "^13.1.3",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@sentry/rollup-plugin": "^4.8.0",
		"@smithery/cli": "^3.6.0",
		"@types/node": "^25.1.0",
		"@vitest/coverage-v8": "^4.0.18",
		"abstract-syntax-tree": "^2.22.0",
		"cross-env": "^10.1.0",
		"ibm-openapi-validator": "^1.37.9",
		"lefthook": "^2.0.16",
		"semantic-release": "^25.0.2",
		"tsdown": "^0.20.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c"
}
